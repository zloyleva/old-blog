<h1>Article</h1>

<h2><%= @article.title %></h2>
<p><%= @article.text %></p>


<% @article.comments.each do |variable| %>
	<div style="border-left: 4px solid; padding-left: 10px; ">
		<p>Author: <%= variable.author %></p> 
		<p>Comment: <i><%= variable.body %></i> </p> 
	</div>
<% end %>


<% if current_user %>
	<%= form_for([@article, @article.comments.build]) do |f|	%>
		
		<p>
			<%= f.label :author %>
			<%= f.text_field :author %>
		</p>
		<p>
			<%= f.label :body %>
			<%= f.text_area :body %>
		</p>
		<p>
			<%= f.submit %>
		</p>

	<% end %>
<% end %>
